                "code": {
                  "coding": [
                    {
                      "system": "https://aiccelerate.eu/fhir/CodeSystem/nms-sections",
                      "code": "D",
                      "display": "Psychosis"
                    }
                  ]
                },
                "valueQuantity": {
                  "value": "{{%score}}",
                  "unit": "{score}",
                  "system": "http://unitsofmeasure.org",
                  "code": "{score}"
                }
              }
