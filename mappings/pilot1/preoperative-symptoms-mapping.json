{
  "url": "https://aiccelerate.eu/fhir/mappings/pilot1/preoperative-symptoms-mapping",
  "name": "preoperative-symptoms-mapping",
  "title": "Mapping of schema preoperative symptoms to AIC-PreoperativeSymptom profile resources",
  "source": [{
    "alias": "source",
    "url": "/StructureDefinition/ext-preoperative-symptoms"
  }],
  "context": {
    "prsConceptMap":  {
      "category": "concept-map",
      "url": "./preoperative-symptoms-concept-map.csv"
    }
  },
  "mapping": [
    {
      "expression": {
        "name": "result",
        "language": "application/fhir-template+json",
        "value": {
          "{{#ind}}": "{{utl:evaluateExpression(utl:indices(1, 19).select('v' & $this.toString()).mkString(' | ')).indicesWhere($this.exists()).select($this.toString())}}",
          "{{*}}": {
            "resourceType": "Observation",
            "id": "{{uuid()}}",
            "meta": {
              "profile": [
                "https://aiccelerate.eu/fhir/StructureDefinition/AIC-PreoperativeSymptom"
              ]
            },
            "status": "final",
            "category": [
              {
                "coding": [
                  {
                    "system": "http://terminology.hl7.org/CodeSystem/observation-category",
                    "code": "survey",
                    "display": "Survey"
                  }
                ]
              }
            ],
            "code": {
              "coding": [
                {
                  "system": "http://snomed.info/sct",
                  "code": "{{utl:getConcept(%prsConceptMap, %ind, 'target_code')}}",
                  "display": "{{utl:getConcept(%prsConceptMap, %ind, 'target_display')}}"
                }
              ]
            },
            "subject": {
              "reference": "Patient/{{pid}}"
            },
            "encounter": "{{? utl:createFhirReference('Encounter', encounterId)}}",
            "effectiveDateTime": "{{time}}",
            "valueBoolean": "{{utl:evaluateExpression('s' & %ind)}}"
          }
        }
      }
    }
  ]
}