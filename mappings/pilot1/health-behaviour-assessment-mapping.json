{
  "url": "https://aiccelerate.eu/fhir/mappings/health-behavior-assessment-mapping",
  "name": "health-behavior-assessment-mapping",
  "title": "Mapping of HealthBehaviorAssessment schema for pilots to AIC Smoking Status and Health Behavior Assessment FHIR profiles",
  "source": [{
    "alias": "source",
    "url": "/StructureDefinition/ext-health-behavior-assessment"
  }],
  "context": {
    "hbaConceptMap":  {
      "category": "concept-map",
      "url": "./health-behavior-assessment-concept-map.csv"
    }
  },
  "mapping": [
    {
      "precondition": {
        "name": "isSmokingStatus",
        "language": "text/fhirpath",
        "expression": "code = '72166-2'"
      },
      "expression": {
        "name": "result",
        "language": "application/fhir-template+json",
        "value": {
          "resourceType": "Observation",
          "id": "{{uuid()}}",
          "meta": {
            "profile": ["https://aiccelerate.eu/fhir/StructureDefinition/AIC-SmokingStatus"]
          },
          "status": "final",
          "category": [
            {
              "coding": [
                {
                  "system": "http://terminology.hl7.org/CodeSystem/observation-category",
                  "code": "social-history",
                  "display": "Social History"
                }
              ]
            }
          ],
          "code": {
            "coding": [
              {
                "system": "http://loinc.org",
                "code": "72166-2",
                "display": "Smoking Status"
              }
            ]
          },
          "subject": {
            "reference": "Patient/{{pid}}"
          },
          "encounter": "{{? utl:createFhirReference('Encounter', encounterId)}}",
          "effectiveDateTime": "{{time}}",
          "valueCodeableConcept": {
            "coding": [
              {
                "system": "http://snomed.info/sct",
                "code": "{{value}}",
                "display": "{{mpp:getConcept(%hbaConceptMap, value, 'source_display')}}"
              }
            ]
          }
        }
      }
    },
    {
      "precondition": {
        "name": "isNotSmokingStatus",
        "language": "text/fhirpath",
        "expression": "code != '72166-2'"
      },
      "expression": {
        "name": "result",
        "language": "application/fhir-template+json",
        "value": {
          "resourceType": "Observation",
          "id": "{{uuid()}}",
          "meta": {
            "profile": ["https://aiccelerate.eu/fhir/StructureDefinition/AIC-HealthBehaviourAssessment"]
          },
          "status": "final",
          "category": [
            {
              "coding": [
                {
                  "system": "http://terminology.hl7.org/CodeSystem/observation-category",
                  "code": "social-history",
                  "display": "Social History"
                }
              ]
            }
          ],
          "code": {
            "coding": [
              {
                "system": "http://loinc.org",
                "code": "{{code}}",
                "display": "{{mpp:getConcept(%hbaConceptMap, code, 'source_display')}}"
              }
            ]
          },
          "subject": {
            "reference": "Patient/{{pid}}"
          },
          "encounter": "{{? utl:createFhirReference('Encounter', encounterId)}}",
          "effectiveDateTime": "{{time}}",
          "valueCodeableConcept": {
            "coding": [
              {
                "system": "http://snomed.info/sct",
                "code": "{{value}}",
                "display": "{{mpp:getConcept(%hbaConceptMap, value, 'source_display')}}"
              }
            ]
          }
        }
      }
    }
  ]
}