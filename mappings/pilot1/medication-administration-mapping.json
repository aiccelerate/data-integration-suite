{
  "url": "https://aiccelerate.eu/fhir/mappings/pilot1/medication-administration-mapping",
  "name": "medication-administration-mapping",
  "title": "Mapping of schema MedicationAdministration to AIC-MedicationAdministration FHIR profile",
  "source": [{
    "alias": "source",
    "url": "/StructureDefinition/ext-medication-administration"
  }],
  "mapping": [
    {
      "expression": {
        "name": "result",
        "language": "application/fhir-template+json",
        "value": {
          "resourceType": "MedicationAdministration",
          "id": "{{uuid()}}",
          "meta": {
            "profile": ["https://aiccelerate.eu/fhir/StructureDefinition/AIC-MedicationAdministration"]
          },
          "status": "completed",
          "category": {
            "coding": [
              {
                "system": "http://terminology.hl7.org/CodeSystem/medication-admin-category",
                "code": "inpatient",
                "display": "Inpatient"
              }
            ]
          },
          "medicationCodeableConcept": {
            "coding": [
              {
                "system": "http://www.whocc.no/atc",
                "code": "{{code}}",
                "display": "{{? codeDisplay}}"
              }
            ]
          },
          "subject": {
            "reference": "Patient/{{pid}}"
          },
          "context": "{{? utl:createFhirReference('Encounter', encounterId)}}",
          "effectivePeriod": {
            "start":"{{startTime}}",
            "end": "{{? endTime}}"
          },
          "dosage": {
            "dose": {
              "value": "{{dose}}",
              "unit": "{{doseUnit}}",
              "system": "http://unitsofmeasure.org",
              "code": "{{doseUnit}}"
            }
          }
        }
      }
    }
  ]
}