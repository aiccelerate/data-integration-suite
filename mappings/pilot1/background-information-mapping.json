{
  "url": "https://aiccelerate.eu/fhir/mappings/background-information-mapping",
  "name": "background-information-mapping",
  "title": "Mapping of schema background information to AIC-OperationFlag profile resources",
  "source": [{
    "alias": "source",
    "url": "/StructureDefinition/ext-background-information"
  }],
  "context": {
    "binfConceptMap":  {
      "category": "concept-map",
      "url": "./background-information-concept-map.csv"
    }
  },
  "mapping": [
    {
      "expression": {
        "name": "result",
        "language": "application/fhir-template+json",
        "value": {
          "{{#ind}}": "{{utl:evaluateExpression(utl:indices(1, 44).select('v' & $this.toString()).mkString(' | ')).indicesWhere($this.exists() and $this).select($this.toString())}}",
          "{{*}}": {
            "resourceType": "Flag",
            "id": "{{utl:uuid()}}",
            "meta": {
              "profile": ["https://aiccelerate.eu/fhir/StructureDefinition/AIC-OperationFlag"]
            },
            "status": "inactive",
            "category": [
              {
                "coding": [
                  {
                    "system": "http://terminology.hl7.org/CodeSystem/flag-category",
                    "code": "{{mpp:getConcept(%binfConceptMap, %ind, 'flag_category')}}"
                  }
                ]
              }
            ],
            "code": {
              "coding": [
                {
                  "system": "{{mpp:getConcept(%binfConceptMap, %ind, 'target_system')}}",
                  "code": "{{mpp:getConcept(%binfConceptMap, %ind, 'target_code')}}",
                  "display": "{{mpp:getConcept(%binfConceptMap, %ind, 'target_display')}}"
                }
              ]
            },
            "subject": {
              "reference": "Patient/{{pid}}"
            },
            "encounter": "{{utl:createFhirReference('Encounter', encounterId)}}",
            "period": {
              "start": "{{? time}}"
            }
          }
        }
      }
    }
  ]
}