{
  "url": "https://aiccelerate.eu/fhir/mappings/pilot2/medication-used-mapping",
  "name": "medication-used-mapping",
  "title": "Mapping of schema MedicationUsed to AIC-MedicationUsed FHIR profile",
  "source": [{
    "alias": "source",
    "url": "/StructureDefinition/ext-plt2-medication-used"
  }],
  "mapping": [
    {
      "expression": {
        "name": "result",
        "language": "application/fhir-template+json",
        "value": {
          "resourceType": "MedicationStatement",
          "id": "{{medicationUseID}}",
          "meta": {
            "profile": ["https://aiccelerate.eu/fhir/StructureDefinition/AIC-MedicationUsed"]
          },
          "status": "completed",
          "medicationCodeableConcept": {
            "coding": [
              {
                "system": "http://www.whocc.no/atc",
                "code": "{{code}}",
                "display": "{{? codeDisplay}}"
              }
            ]
          },
          "subject": {
            "reference": "Patient/{{pid}}"
          },
          "effectivePeriod": {
            "start": "{{startDate}}",
            "end": "{{? endDate}}"
          },
          "dosage": {
            "{{#ds}}": "{{dose}}",
            "{{*}}": {
              "timing": {
                "frequency": "{{frequency}}",
                "periodUnit": "d",
                "period": 1
              },
              "doseAndRate": [
                {
                  "doseQuantity": {
                    "system": "http://unitsofmeasure.org",
                    "code": "{{doseUnit}}",
                    "value": "{{ds}}"
                  }
                }
              ]
            }
          }
        }
      }
    }
  ]
}