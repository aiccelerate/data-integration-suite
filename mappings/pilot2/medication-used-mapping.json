{
  "id": "medication-used-mapping",
  "url": "https://aiccelerate.eu/fhir/mappings/pilot2/medication-used-mapping",
  "name": "medication-used-mapping",
  "title": "Mapping of schema MedicationUsed to AIC-MedicationUsed FHIR profile",
  "source": [{
    "alias": "source",
    "url": "https://aiccelerate.eu/fhir/StructureDefinition/Ext-plt2-medication-used"
  }],
  "mapping": [
    {
      "expression": {
        "name": "result",
        "language": "application/fhir-template+json",
        "value": {
          "resourceType": "MedicationStatement",
          "id": "{{mpp:getHashedId('MedicationStatement',medicationUseID)}}",
          "meta": {
            "profile": ["https://aiccelerate.eu/fhir/StructureDefinition/AIC-MedicationUsed"],
            "source": "{{%sourceSystem.sourceUri}}"
          },
          "identifier": [
            {
              "use": "official",
              "system": "{{%sourceSystem.sourceUri}}",
              "value": "{{medicationUseID}}"
            }
          ],
          "status": "completed",
          "medicationCodeableConcept": {
            "coding": [
              {
                "system": "http://www.whocc.no/atc",
                "code": "{{code}}",
                "display": "{{? codeDisplay}}"
              }
            ]
          },
          "subject": "{{mpp:createFhirReferenceWithHashedId('Patient', pid)}}",
          "effectivePeriod": {
            "start": "{{startDate}}",
            "end": "{{endDate.nav:orElse(startDate.toDate() + 24 months)}}"
          },
          "dosage": [{
            "{{#singleValue}}": "{{iif(dose.contains('+'), {}, true)}}",
            "{{?}}": {
              "sequence": 1,
              "timing": {
                "repeat": {
                  "frequency": "{{iif(frequency.trim().exists(), frequency.trim().toDecimal(), 1)}}",
                  "periodUnit": "d",
                  "period": 1
                }
              },
              "doseAndRate": [
                {
                  "{{#range}}": "{{iif(dose.contains('-'), true, {})}}",
                  "{{?}}": {
                    "doseRange": {
                      "low": {
                        "unit": "{{? doseUnit.trim()}}",
                        "value": "{{dose.utl:split('-').first().trim().toDecimal() * iif(strength.trim().exists(), strength.toDecimal(), 1)}}"
                      },
                      "high": {
                        "unit": "{{? doseUnit.trim()}}",
                        "value": "{{dose.utl:split('-').last().trim().toDecimal() * iif(strength.trim().exists(), strength.toDecimal(), 1)}}"
                      }
                    }
                  }
                },
                {
                  "{{#single}}": "{{iif(dose.contains('-'), {}, true)}}",
                  "{{?}}": {
                    "doseQuantity": {
                      "unit": "{{? doseUnit.trim()}}",
                      "value": "{{? iif(doseUnit.trim()='mg' or doseUnit.trim()='MG', dose.toDecimal(), dose.toDecimal() * iif(strength.trim().exists(), strength.toDecimal(), 1))}}"
                    }
                  }
                }
              ]
            }
          }],
          "dosage": {
            "{{#ds}}": "{{iif(dose.contains('+'), dose.utl:split('+').select($this.toDecimal()), {})}}",
            "{{*}}": {
              "sequence": "{{%sectionIndex}}",
              "timing": {
                "repeat": {
                  "frequency": 1,
                  "periodUnit": "d",
                  "period": 1
                }
              },
              "doseAndRate": [
                {
                  "doseQuantity": {
                    "system": "http://unitsofmeasure.org",
                    "code": "mg",
                    "unit": "mg",
                    "value": "{{%ds * strength.toDecimal()}}"
                  }
                }
              ]
            }
          }
        }
      }
    }
  ]
}
