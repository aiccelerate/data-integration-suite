{
  "url": "https://aiccelerate.eu/fhir/mappings/pilot2/symptom-existence-mapping",
  "name": "symptom-existence-mapping",
  "title": "Mapping of symptom existence schema for pilot 2 to AIC-ParkinsonMotorObservation profile",
  "source": [{
    "alias": "source",
    "url": "/StructureDefinition/ext-plt2-symptom-existence"
  }],
  "context": {
    "symptomCodesMap":  {
      "category": "concept-map",
      "url": "./symptom-codes-concept-map.csv"
    }
  },
  "mapping": [
    {
      "expression": {
        "name": "result",
        "language": "application/fhir-template+json",
        "value": {
          "resourceType": "Observation",
          "id": "{{observationID}}",
          "meta": {
            "profile": ["{{mpp:getConcept(%symptomCodesMap, code, 'target_profile')}}"]
          },
          "status": "final",
          "code": {
            "coding": [
              {
                "system": "{{mpp:getConcept(%symptomCodesMap, code, 'target_system')}}",
                "code": "{{code}}",
                "display": "{{mpp:getConcept(%symptomCodesMap, code, 'target_display')}}"
              }
            ]
          },
          "subject": {
            "reference": "Patient/{{pid}}"
          },
          "encounter": "{{? utl:createFhirReference('Encounter', encounterId)}}",
          "effectivePeriod": {
            "start": "{{startDate}}",
            "end": "{{? endDate}}"
          },
          "valueBoolean": "{{symptomExists}}",
          "performer": "{{* iif(isProm, utl:createFhirReference('Patient', pid), {})}}"
        }
      }
    }
  ]
}