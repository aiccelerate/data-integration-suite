{
  "url": "https://aiccelerate.eu/fhir/mappings/pilot2/condition-mapping",
  "name": "condition-mapping",
  "title": "Mapping of condition schema for pilots to AIC-Condition FHIR profile",
  "source": [{
    "alias": "source",
    "url": "https://aiccelerate.eu/fhir/StructureDefinition/Ext-plt2-condition"
  }],
  "mapping": [
    {
      "expression": {
        "name": "result",
        "language": "application/fhir-template+json",
        "value": {
          "resourceType": "Condition",
          "id": "{{mpp:getHashedId('Condition',conditionID)}}",
          "meta": {
            "profile": ["https://aiccelerate.eu/fhir/StructureDefinition/AIC-Condition"],
            "source": "{{%sourceSystem.sourceUri}}"
          },
          "identifier": [
            {
              "use": "official",
              "system": "{{%sourceSystem.sourceUri}}",
              "value": "{{conditionID}}"
            }
          ],
          "clinicalStatus": {
            "coding": [
              {
                "system": "http://terminology.hl7.org/CodeSystem/condition-clinical",
                "code": "{{iif(abatementDateTime.exists(), 'inactive', 'active')}}"
              }
            ]
          },
          "code": {
            "coding": [
              {
                "system": "http://hl7.org/fhir/sid/icd-10",
                "code": "{{code}}",
                "display": "{{codeDisplay}}"
              }
            ]
          },
          "subject": "{{mpp:createFhirReferenceWithHashedId('Patient', pid)}}",
          "encounter": "{{? mpp:createFhirReferenceWithHashedId('Encounter', encounterID)}}",
          "onsetDateTime": "{{onsetDateTime}}",
          "abatementDateTime": "{{? abatementDateTime}}"
        }
      }
    }
  ]
}