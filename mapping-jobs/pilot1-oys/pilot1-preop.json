{
  "id": "pilot1-preop",
  "sourceSettings": {
    "source": {
      "jsonClass": "FileSystemSourceSettings",
      "name": "pilot1-source",
      "sourceUri": "https://aiccelerate.eu/oys",
      "dataFolderPath": "test-data/pilot1-oys"
    }
  },
  "sinkSettings": {
    "jsonClass": "FhirRepositorySinkSettings",
    "fhirRepoUrl": "${FHIR_REPO_URL}",
    "writeErrorHandling": "continue"
  },
  "mappingErrorHandling": "continue",
  "mappings": [
    {
      "name": "patient-mapping",
      "mappingRef": "https://aiccelerate.eu/fhir/mappings/pilot1-oys/patient-mapping",
      "sourceBinding": {
        "source": {
          "jsonClass": "FileSystemSource",
          "path": "patients.csv",
          "contentType": "csv",
          "sourceRef": "source"
        }
      }
    },
    {
      "name": "operation-episode-mapping",
      "mappingRef": "https://aiccelerate.eu/fhir/mappings/pilot1-oys/operation-episode-mapping",
      "sourceBinding": {
        "episodes": {
          "jsonClass": "FileSystemSource",
          "path": "operation-episodes.csv",
          "contentType": "csv",
          "options": {
            "sep": ","
          },
          "sourceRef": "source"
        },
        "conditions": {
          "jsonClass": "FileSystemSource",
          "path": "conditions.csv",
          "contentType": "csv",
          "options": {
            "sep": ","
          },
          "sourceRef": "source"
        }
      }
    },
    {
      "name": "operation-episode-encounter-mapping",
      "mappingRef": "https://aiccelerate.eu/fhir/mappings/pilot1-oys/operation-episode-encounter-mapping",
      "sourceBinding": {
        "source": {
          "jsonClass": "FileSystemSource",
          "path": "operation-episode-encounters.csv",
          "contentType": "csv",
          "sourceRef": "source"
        }
      }
    },
    {
      "name": "surgery-details-mapping",
      "mappingRef": "https://aiccelerate.eu/fhir/mappings/pilot1-oys/surgery-details-mapping",
      "sourceBinding": {
        "source": {
          "jsonClass": "FileSystemSource",
          "path": "surgery-details.csv",
          "contentType": "csv",
          "sourceRef": "source"
        }
      }
    },
    {
      "name": "condition-mapping",
      "mappingRef": "https://aiccelerate.eu/fhir/mappings/pilot1-oys/condition-mapping",
      "sourceBinding": {
        "source": {
          "jsonClass": "FileSystemSource",
          "path":  "conditions.csv",
          "contentType": "csv",
          "sourceRef": "source"
        }
      }
    },
    {
      "name": "preoperative-assessment-mapping",
      "mappingRef": "https://aiccelerate.eu/fhir/mappings/pilot1-oys/preoperative-assessment-mapping",
      "sourceBinding": {
        "assessment": {
          "jsonClass": "FileSystemSource",
          "path":  "preoperative-assessment.csv",
          "contentType": "csv",
          "sourceRef": "source"
        },
        "encounters": {
          "jsonClass": "FileSystemSource",
          "path":  "operation-episode-encounters.csv",
          "contentType": "csv",
          "sourceRef": "source"
        }
      }
    },
    {
      "name": "vital-signs-mapping",
      "mappingRef": "https://aiccelerate.eu/fhir/mappings/pilot1-oys/vital-signs-mapping",
      "sourceBinding": {
        "source": {
          "jsonClass": "FileSystemSource",
          "path":  "vital-signs.csv",
          "contentType": "csv",
          "sourceRef": "source"
        }
      }
    }
  ]
}
